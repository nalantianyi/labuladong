{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "esModuleInterop": true,
      "strict": true,
      "outDir": "dist",
      "sourceMap": true,
      "declaration": true,
      "resolveJsonModule": true,
      "rootDir": "src",
      "lib": ["ES2022", "DOM"],
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
  }